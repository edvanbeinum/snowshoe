<?xml version="1.0" encoding="UTF-8"?>
<phpunit convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"

         colors="true">
    <testsuites>
        <testsuite name="Snowshoe TestSuite">
            <directory suffix="Test.php">Snowshoe/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <blacklist>
            <directory suffix=".php">../Snowshoe/Vendor/</directory>
        </blacklist>
    </filter>
    <logging>
        <log type="coverage-clover" target="report/coverage.xml"/>
    </logging>
</phpunit>